{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "/profile.html",
        "type": 301
      },
      {
        "source": "/index.html",
        "destination": "/profile.html",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/profile.html"
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
}
